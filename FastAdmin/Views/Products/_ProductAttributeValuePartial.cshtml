@model ProductAttributeValueViewModel

<table class="table table-striped bg-white border b-rounded" id="table-data">
    <thead>
        <tr>
            <th>
                نام
            </th>
            <th>
                مقدار
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.AttributeValues.Count > 0)
        {
            foreach (var item in Model.AttributeValues)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.value)
                    </td>
                    <td>
                        <a href="#" id="editAttributeValueButton" onclick="changeEditAttributeValue(this.id,@item.Id)">ویرایش</a> |
                        <button type="button" class="btn p-0 text-decoration-none remove-product" id="removeAttributeValueButton">حذف</button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>