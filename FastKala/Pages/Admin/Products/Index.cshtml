@page
@model FastKala.Pages.Admin.Products.IndexModel

@{
    ViewData["Title"] = "محصولات";
    Layout = "~/Pages/Admin/_Layout.cshtml";
}

<p>
    <a asp-page="Create" class="btn btn-primary">افزودن محصول جدید</a>
</p>
<table class="table table-striped bg-white border b-rounded">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].StockQuantity)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Product)
        {
            <tr>
                <td>
                    <strong class="product-name">
                        @Html.DisplayFor(modelItem => item.Name)
                    </strong><br>
                    <div>
                        <form method="post">
                            <a class="product-name" asp-page="./Edit" asp-route-id="@item.Id">ویرایش</a> |
                            <button type="submit" class="btn btn-link p-0 text-decoration-none product-name remove-product" asp-page-handler="Delete" asp-route-id="@item.Id">حذف</button>
                        </form>
                    </div>
                </td>
                <td>
                    @if (item.SalePrice != null)
                    {
                        <del>@Html.DisplayFor(modelItem => item.Price) <span>تومان</span></del>
                        <br> @Html.DisplayFor(modelItem => item.SalePrice) <span>تومان</span>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.Price) <br> @Html.DisplayFor(modelItem => item.SalePrice)
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StockQuantity)
                </td>
            </tr>
        }
    </tbody>
</table>
