@page "/Login"
@model LoginModel
@{
    Layout = "/Pages/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "ورود";
}

<div class="account-box">
    <div class="account-box-headline">
        <a class="login-ds active">
            <span class="title">ورود</span>
            <span class="sub-title">به فست کالا</span>
        </a>
        <a asp-page="/Account/Register" class="register-ds">
            <span class="title">ثبت نام</span>
            <span class="sub-title">در فست کالا</span>
        </a>
    </div>
    <div class="Login-to-account mt-4">
        <div class="account-box-content">
            <h4>ورود به حساب کاربری</h4>
            <form method="post" class="form-account text-right">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-account-title">
                    <label asp-for="Input.Email">ایمیل / شماره موبایل</label>
                    <input type="text" class="number-email-input" asp-for="Input.Email">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-account-title">
                    <label asp-for="Input.Password">رمز عبور</label>
                    <a href="#" class="account-link-password">رمز خود را فراموش کرده ام</a>
                    <input type="password" class="password-input" asp-for="Input.Password">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-auth-row">
                    <label class="ui-checkbox mt-1">
                        <input type="checkbox" asp-for="Input.RememberMe" />
                        <span class="ui-checkbox-check"></span>
                    </label>
                    <label asp-for="Input.RememberMe" class="remember-me mr-0"></label>
                </div>
                <div class="form-row-account">
                    <button class="btn btn-primary btn-login">ادامه</button>
                </div>
            </form>
        </div>
    </div>
</div>


